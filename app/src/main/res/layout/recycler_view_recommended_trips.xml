<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_recommended_trip"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:focusable="true"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_thumbnail"
            android:layout_width="@dimen/image_view_thumbnail_width"
            android:layout_height="144dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_local_airport"
            app:tint="@color/app_blue_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/Font.Headline3"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/image_view_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""/>

        <ImageView
            android:id="@+id/image_view_calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="?colorPrimary"
            android:src="@drawable/ic_baseline_calendar_month_24"
            app:layout_constraintStart_toEndOf="@id/image_view_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/text_view_title"
            app:layout_constraintStart_toStartOf="@id/text_view_title"
            app:layout_constraintBottom_toTopOf="@id/image_view_price_icon" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/Font.Normal"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/image_view_calendar_icon"
            app:layout_constraintTop_toTopOf="@id/image_view_calendar_icon"
            app:layout_constraintBottom_toBottomOf="@id/image_view_calendar_icon"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/image_view_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?colorPrimary"
            android:src="@drawable/ic_baseline_euro"
            app:layout_constraintTop_toBottomOf="@id/image_view_calendar_icon"
            app:layout_constraintStart_toStartOf="@id/text_view_title"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/image_view_location"/>

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            style="@style/Font.Headline3"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/image_view_price_icon"
            app:layout_constraintTop_toTopOf="@id/image_view_price_icon"
            app:layout_constraintBottom_toBottomOf="@id/image_view_price_icon"
            app:layout_constraintEnd_toStartOf="@id/image_view_location"/>

        <ImageView
            android:id="@+id/image_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location"
            style="?colorPrimary"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>