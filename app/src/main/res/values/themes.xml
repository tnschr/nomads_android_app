<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base"  parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue_primary</item>
        <item name="colorPrimaryVariant">@color/app_blue_secondary</item>
        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorControlHighlight">?colorPrimary</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="onWindowColorPrimary">@color/black</item>
        <item name="onWindowColorSecondary">#000FFF</item>

        <item name="rippleColorPrimary">?colorPrimary</item>
        <item name="rippleColorSecondary">?colorAccent</item>

        <item name="actionBarTheme">@style/Style.Toolbar.Light</item>
    </style>

    <style name="Theme.Base.Main">
    </style>

</resources>