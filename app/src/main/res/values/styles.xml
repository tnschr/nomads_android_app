<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Font" parent="">
        <item name="android:textColor">?attr/onWindowColorPrimary</item>
    </style>

    <style name="Font.Headline1">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Headline3">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Large.Extra">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Font.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Font.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Font.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Font.Small.Extra">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="Font.Small.Extra.Double">
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="Font.Dialog.Title" parent="@style/Font.Large.Extra">
        <item name="android:textStyle">bold</item>
    </style>
    <!--End Font Styles-->

    <style name="Style.Button" parent="">
        <item name="android:layout_width">32sp</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_gravity">center|end</item>
    </style>


    <style name="Style.Toolbar.Light" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?colorAccent</item>
        <item name="colorControlHighlight">?rippleColorSecondary</item>
        <item name="colorOnPrimary">?colorAccent</item>
    </style>

    <style name="Style.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Style.News.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>





</resources>